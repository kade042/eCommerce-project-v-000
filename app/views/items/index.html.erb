<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-md-12">
     <div class="table-responsive">
       <table id="mytable" class="table table-bordred table-striped">
         <thead>
             <th>Title</th>
             <th>Price</th>
             <th>Inventory</th>
             <th>CategoryId</th>
             <th>Description</th>
             <th>Edit</th>
             <th>Delete</th>
         </thead>
         <tbody>
          <% @items.each do |item| %>
          <tr>
            <td><%=link_to item.title, item_path(item)%></td>
            <td><%=item.price%></td>
            <td><%=item.inventory%></td>
            <td><%=item.category_id%></td>
            <td><%=item.description%></td>
            <td><%= link_to '<span class="btn btn-md btn-info fa fa-pencil"></span>'.html_safe ,
              edit_item_path(item) %>
           </td>
            <td><%= link_to '<span class="btn btn-md btn-danger fa fa-trash"></span>'.html_safe,
              item_path(item), method: :delete %>
            </td>
          </tr>

          <%end%>
        </tbody>

      </table>
  </div>
 </div>
</div>
</div>



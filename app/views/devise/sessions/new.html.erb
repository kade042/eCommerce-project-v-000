
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="col-md-4 col-md-offset-4">
  <%= devise_error_messages! %>
  <div class="panel panel-default">

    <div class="panel-group">
      <div class="panel-heading">
        <div>
          <h3 class="panel-title" >Log In</h3>
        </div>
        <br />
        <div class="separator">
          <span class="separator-text">OR</span>
        </div>

        <div id="socialHolder">
          <p>
            <%= link_to  "", user_twitter_omniauth_authorize_path, class: "btn btn-lg btn-twitter fa fa-twitter" %>
          </p>
        </div>

      </div>
      <div class="panel-body">
        <div style="margin-bottom: 12px" class="text input-group">
          <%= f.email_field :email, placeholder: 'Email', autofocus: true, class: "form-control" %>
        </div>

        <div style="margin-bottom: 12px" class="text input-group">
          <%= f.password_field :password, placeholder: 'Password', autocomplete: "off", class: "form-control"  %>
        </div>
      </div>
      <div class="panel-footer">
        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "Log In" %>
        </div>
        Donâ€™t have an account?<%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
<% end %>
